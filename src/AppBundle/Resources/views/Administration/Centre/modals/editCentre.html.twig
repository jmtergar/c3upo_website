<div id="editCentreModal" class="modal fade editCentreModal" {#tabindex="-1"#} role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title" id="myModalLabel">{{'editCentre' | trans}}</h3>
            </div>  
            <div class="modal-body" id="editCentreContent">
                <input type="hidden" id="editCentreModal-centreId">
                <div class="formContent"></div>
            </div>
        </div>
    </div>
</div>
            
<script type="text/javascript">
    $(document).ready(function(){
        $("#editCentreModal").on('show.bs.modal', function(event){
            $("#editCentreModal .cleanableinput>*").val('');
            $("#formEditCentreErrorSection").html("");

            var url = "{{ path('adminstration_centre_edition', {'centreId': 'centreId'}) }}";
            url = url.replace('centreId', $('#editCentreModal-centreId').val());
            $.post(url, function(response){
                $("#editCentreModal .modal-body .formContent").html(response.html_form);
                $('input').attr('autocomplete', 'off');
            }, 'json');
        });
    });
</script>